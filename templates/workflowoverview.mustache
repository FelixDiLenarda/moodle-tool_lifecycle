<link rel="stylesheet" href="scss/styles.scss">
<div class="workflow wf-trigger-wrapper">
{{#trigger}}
    <div class="workflow-trigger workflow-item">
        <strong>{{instancename}}</strong><br> {{subpluginname}}
    </div>
{{/trigger}}
</div>
<div class="workflow wf-steps-wrapper">
    {{#steps}}
        <div class="workflow-single-step-wrapper">
            <div class="workflow-step workflow-item">
                <div class="workflow-arrow-wrapper">{{#pix}} i/down, core, {{#str}} arrowdown, tool_lifecycle{{/str}} {{/pix}}</div>
                <strong>{{instancename}}</strong> &nbsp; <a href="{{steplink}}&step={{sortindex}}">{{icon}}{{name}}<span class="wf-course-counter">{{#pix}} i/courseevent, core, {{#str}} affcourses, tool_lifecycle{{/str}} {{/pix}} {{numberofcourses}}</span></a><br><em>{{subpluginname}}</em>
            </div>
        </div>
    {{/steps}}
</div>
{{#listofcourses}}
    {{table}}
{{/listofcourses}}